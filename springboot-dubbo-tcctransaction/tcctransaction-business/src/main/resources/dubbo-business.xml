<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xmlns:dubbo="http://dubbo.apache.org/schema/dubbo"
       xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd
                        http://dubbo.apache.org/schema/dubbo http://dubbo.apache.org/schema/dubbo/dubbo.xsd">

    <dubbo:application name="${dubbo.application.name}"  />
    <dubbo:registry protocol="zookeeper" address="${dubbo.registry.address}" />
    <dubbo:protocol name="dubbo" port="${dubbo.protocol.port}" dispatcher="all" threadpool="fixed" threads="2000"/>


    <dubbo:reference id="accountDubboService" check="false"
                     interface="com.example.tcctransaction.common.dubbo.AccountDubboService"
                     version="1.0.0"
                     timeout="3000"
    />

    <dubbo:reference id="orderDubboService" check="false"
                     interface="com.example.tcctransaction.common.dubbo.OrderDubboService"
                     version="1.0.0"
                     timeout="3000"
    />

    <dubbo:reference id="storageDubboService" check="false"
                     interface="com.example.tcctransaction.common.dubbo.StorageDubboService"
                     version="1.0.0"
                     timeout="3000"
    />

</beans>